@keyframes circle
  0%
    transform: rotate(0)
  100%
    transform: rotate(360deg)

@keyframes huahuan
  0%
    transform: rotate(0) translate(50%, 50%)
  100%
    transform: rotate(360deg) translate(50%, 50%)

@keyframes arrow
    0%,
    to
        -webkit-transform: translateY(-5px);
        opacity: .8
    50%
        -webkit-transform: translateY(10px);
        opacity: 1
    to
        -webkit-transform: translateY(-5px);
        opacity: .8